<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="add_str" Content="Добавить запись" HorizontalAlignment="Left" Height="43" Margin="23,10,0,0" VerticalAlignment="Top" Width="145" Click="Add_str_Click"/>
        <DataGrid x:Name="data" HorizontalAlignment="Left" Height="295" Margin="23,78,0,0" VerticalAlignment="Top" Width="644">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding uid}" ClipboardContentBinding="{x:Null}" Header="uid"/>
                <DataGridCheckBoxColumn Binding="{Binding FIO}" ClipboardContentBinding="{x:Null}" Header="FIO"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="open" Content="Загрузить" HorizontalAlignment="Left" Height="43" Margin="173,10,0,0" VerticalAlignment="Top" Width="140" Click="open_Click"/>

    </Grid>
</Window>
